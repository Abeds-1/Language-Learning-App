<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient Overlay for the transparent black effect -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- Instruction Text at the top center -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold and Drag to Scan"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <!-- The Rectangle Selection View -->
    <com.example.language_learning_helper.RectangleSelectionView
        android:id="@+id/rectangleSelectionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
