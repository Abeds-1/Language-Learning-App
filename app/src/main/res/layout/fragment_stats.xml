<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/background">

        <!-- Language Selection -->
        <Spinner
            android:id="@+id/spinner_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Translated words count section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/box">

            <TextView
                android:id="@+id/tv_translated_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Translated Words: 0"
                android:textSize="18sp"
                android:textColor="@color/color_on_primary"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- Recent Translations -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent Translations"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/color_on_primary"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_on_primary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_recent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Favorite Words -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorite Words"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/color_on_primary"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_on_primary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_saves"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Clear History Button -->
        <Button
            android:id="@+id/btn_clear_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear History"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>